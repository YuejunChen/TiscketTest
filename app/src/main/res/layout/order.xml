<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/startStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@+id/startStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:id="@+id/startTime" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:src="@drawable/line"
            android:layout_centerInParent="true"
            android:paddingRight="15dp"
             />
        <TextView
            android:id="@+id/trainNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"/>
        <TextView
            android:id="@+id/trainDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/startTime"
            android:layout_alignStart="@+id/image" />
        <TextView
            android:id="@+id/endStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/image"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/endStation"
            android:layout_alignParentRight="true"
            android:paddingRight="30dp"/>
    </RelativeLayout>
    <TextView
    android:id="@+id/firstClass"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:paddingTop="20dp"
    android:textSize="20dp"
    android:text="一等"
    android:gravity="center"
    android:background="@drawable/textview_border"
    android:layout_above="@+id/Add"
    android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/secondClass"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:text="二等"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/textview_border"
        android:layout_alignTop="@+id/firstClass"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/normalSeat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:text="商务"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/textview_border"
        android:layout_alignTop="@+id/firstClass"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+  添加乘客"
        android:gravity="center"
        android:textSize="20dp"
        android:paddingTop="50dp"
        android:textColor="#3366CC"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="提交订单"
        android:textColor="#FFFFFF"
        android:background="#ffa500"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="22dp"/>
</RelativeLayout>
